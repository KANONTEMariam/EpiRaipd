{% if section.settings.enabled %}
<section class="subscribe {% if template == 'index' %}pt-0 {% endif %}{% if settings.footer_layout == 'footer_3' %}subscribe-full{% endif  %}">
  <div class="{% if settings.footer_layout == 'footer_3' %} container-fluid {% else %}container {% endif %}">
    <div class="row">
      {% assign block_size = section.blocks.size  %}
      {% for block in section.blocks %}        
      {% if block.type == 'Contact' %}
      <div class="{% if settings.footer_layout == 'footer_3' %} col-xl-4 offset-xl-1 {% else %}col-xl-5 {% endif %}pr-0 d-xl-block d-md-none" >
        <div class="subscribe-left red-bg">
          <div class="media">
              <i class="align-self-center icon-headphone-alt mr-3"></i>
              <div class="media-body">
                <h3>{{ block.settings.title }}</h3>
                <h1>{{ block.settings.phone_number }}</h1>
                <i class="icon-headphone-alt bg-icon"></i>
              </div>
            </div>
        </div>
      </div>
      {% else %}
      <div class="red-bg {% if block_size == 2 %}col-xl-7 {% else %} col-xl-12{% endif %} pl-0">
        <div class="subscribe-right">
          <div class="row">
            <div class="col">
              <h2> <i class="fa fa-envelope-o"></i>{{ block.settings.title }}</h2>
            </div>
            <div class="col-xl-8">
              <div>
                <form action="{{ block.settings.form_url }}" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
                    <div id="mc_embed_signup_scroll">
                      <input type="email" placeholder="Enter Your Email..." value="" name="EMAIL" class="required email form-control" id="mce-EMAIL" required>
                      <div id="mce-responses" class="clear">
                        <div class="response" id="mce-error-response" style="display:none"></div>
                        <div class="response" id="mce-success-response" style="display:none"></div>
                      </div>
                      <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
                      <div style="position: absolute; left: -5000px;" aria-hidden="true">
                        <input type="text" name="b_17af379706d80b694776f991f_9ebb72e4d2" tabindex="-1" value="">
                      </div>
                      <button type="submit" class="btn btn-secondary btn-secondary-layout-4" name="subscribe" id="mc-embedded-subscribe" >Subscribe</button>
                    </div>
                  </form>
              </div>
            </div>
          </div>
          <i class="fa fa-envelope-o bg-icon"></i>
        </div>
      </div>
      {% endif %}
      {% endfor %}
    </div>
  </div>
</section>
{% endif %}

{% schema %}
{
   "name":"Footer Top",
   "max_blocks":2,
   "settings":[
      {
         "type":"checkbox",
         "id":"enabled",
         "default":true,
         "label":"Enabled"
      }
   ],
   "blocks":[
      {
         "type":"Contact",
         "name":"Contact",
         "settings":[
            {
               "type":"text",
               "id":"title",
               "label":"Title",
               "default":"Contact us"
            },
            {
               "type":"text",
               "id":"phone_number",
               "label":"Phone Number",
               "default":"023-456-7950"
            }
         ]
      },
      {
         "type":"Newsletter",
         "name":"Newsletter",
         "settings":[
            {
               "type":"text",
               "id":"title",
               "label":"Title",
               "default":"Newsletter"
            },
            {
               "type":"text",
               "id":"form_url",
               "label":"Form Action URl",
               "info":"Add Mailchimp Form Url Here."
            }
         ]
      }
   ],
   "presets":[
      {
         "name":"Footer Top",
         "category":"Footer",
         "blocks":[
            {
               "type":"Contact"
            },
            {
               "type":"Newsletter"
            }
         ]
      }
   ]
}
{% endschema %}

