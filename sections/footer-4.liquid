<div class="container">
  <div class="row">
    <div class="col-md-12 footer_accordian text-center">
      <span class="show_more">show more  
      </span>
    </div>
  </div>
</div>

<footer class="section-b-space light-layout gray-bg layout-2 mid_footer">
  <div class="container">
    <div class="row top-card-layout orange-bg " >
      {% for block in section.blocks %}
      {% if block.type == 'newsletter' %}
      <div class="col-xl-3 news-letter">
         <h2 class="text-white {% if settings.enable_lang_switcher %}lang_trans{% endif %}" {% if settings.enable_lang_switcher %}data-trans="#footer4_{{blockId}}title"{% endif %}> <i class="fa fa-envelope-o"></i>{{ block.settings.title }}
              </h2>
              {% if settings.enable_lang_switcher %}
               <span class="hide" id="footer4_{{blockId}}title">{{ block.settings.trans_title | raw }}</span>
              {% endif %}
      </div>
     {% if block.settings.subscribe_text != blank %}
      <div class="col-xl-2">
        <p class="text-white  {% if settings.enable_lang_switcher %}lang_trans{% endif %}" {% if settings.enable_lang_switcher %}data-trans="#footer4_{{blockId}}subscribe_text"{% endif %}> <i class="fa fa-envelope-o"></i>{{ block.settings.subscribe_text }}</p>
        {% if settings.enable_lang_switcher %}
         <span class="hide" id="footer4_{{blockId}}subscribe_text">{{ block.settings.trans_subscribe_text | raw }}</span>
        {% endif %}
      </div>
      {% endif %}
      <div class="col-xl-4">
        <div class="position-relative subscribe-sub-top">
          <form action="{{ block.settings.form_url }}" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
            <div id="mc_embed_signup_scroll">
              <input type="email" placeholder="Enter Your Email..." value="" name="EMAIL" class="required email form-control" id="mce-EMAIL" required>
              <div id="mce-responses" class="clear">
                <div class="response" id="mce-error-response" style="display:none"></div>
                <div class="response" id="mce-success-response" style="display:none"></div>
              </div>
              <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
              <div style="position: absolute; left: -5000px;" aria-hidden="true">
                <input type="text" name="b_17af379706d80b694776f991f_9ebb72e4d2" tabindex="-1" value="">
              </div>
              <button type="submit" class="btn btn-theme" name="subscribe" id="mc-embedded-subscribe" >Subscribe</button>
            </div>
          </form>
        </div>
      </div>
      {% if block.settings.show_downloads %}
      <div class="col-xl-3">
        <div class="footer-app">
          <ul>
            <li class="d-inline-block"> 
              <a href="{{ block.settings.payment_1_link }}">
                <img src="{{ block.settings.payment_1 | img_url: '130x' }}" class="img-fluid" alt="{{ image.alt }}">
              </a>
            </li>
            <li class="d-inline-block">
              <a href="{{ block.settings.payment_2_link }}"><img src="{{ block.settings.payment_2 | img_url: '130x' }}" class="img-fluid" alt="{{ image.alt }}"></a>
            </li>
          </ul>
        </div>
      </div>
      {% endif %}

      {% endif %}
      {% endfor %}
    </div>
    <div class="row section-t-space">
      {% for block in section.blocks %}
      {% if block.type == 'Custom-html' %}
      <div class="col-xl-3" >
        {% if block.settings.footer_logo %}
        {% capture image_size %}{{ block.settings.footer_logo_max_width | escape }}x{% endcapture %}
        <div class="footer-logo">
          <a href="/" itemprop="url"> <img src="{{ block.settings.footer_logo | img_url: image_size }}" alt="{{ shop.name }}" /> </a>
        </div>
        {% else %}
        <h1 itemprop="logo"><a href="/" itemprop="url">{{ shop.name }}</a></h1>
        {% endif %}
        {% if block.settings.text != blank %}
            <p {% if settings.enable_lang_switcher %}class="lang_trans"  {% endif %} {% if settings.enable_lang_switcher %} data-trans="#footer4_{{blockId}}_footer__text_"{% endif %}> 
                 {{ block.settings.text }}</p>
                  {% if settings.enable_lang_switcher %}
                   <span class="hide" id="footer4_{{blockId}}_footer__text_">
                   {{ block.settings.trans_title | raw }}</span>
                  {% endif %}
        {% endif %}

        {% if section.settings.show_social %}
        <ul class="footer-social social-left">
          {% if settings.social_facebook_link != blank %}
          <li><a href="{{ settings.social_facebook_link | escape }}" target="_blank"><i class="fa fa-facebook"></i></a></li>
          {% endif %}
          {% if settings.social_google_link != blank %}
          <li><a href="{{ settings.social_google_link | escape }}" target="_blank"><i class="fa fa-google-plus"></i></a></li>
          {% endif %}
          {% if settings.social_twitter_link != blank %}
          <li><a href="{{ settings.social_twitter_link | escape }}" target="_blank"><i class="fa fa-twitter"></i></a></li>
          {% endif %}
          {% if settings.social_instagram_link != blank %}
          <li><a href="{{ settings.social_instagram_link | escape }}" target="_blank"><i class="fa fa-instagram"></i></a></li>
          {% endif %}
          {% if settings.social_rss_link != blank %}
          <li><a href="{{ settings.social_rss_link | escape }}" target="_blank"><i class="fa fa-rss"></i></a></li>
          {% endif %}
        </ul>
        {% endif %}
      </div>
      {% elsif block.type == 'Menu' %}
      <div class="col">
        <h4 class="sub-title {% if settings.enable_lang_switcher %} lang_trans {% endif %}"{% if settings.enable_lang_switcher %} data-trans="#footer4_{{blockId}}_menu_title"{% endif %}>
                  {{ block.settings.title }}
                </h4>
                {% if settings.enable_lang_switcher %}
                <span class="hide" id="footer4_{{blockId}}_menu_title">{{ block.settings.trans_title | raw }}</span>
                {% endif %}
                 <ul>
            {% if block.settings.footer_linklist != blank %} 
            {% assign footer_linklist = block.settings.footer_linklist -%}
            {% for link in linklists[footer_linklist].links %}
            <li>
              {% assign data_title = link.title | split: '|' | first %}
              {% assign data_json = link.title | split: '|' | last %}
              <a href="{{ link.url }}" style="color: {{ settings.footer_link_color }}" {% if settings.enable_lang_switcher %}class="lang_trans" data-trans="#footer4_{{link.handle}}"{% endif %}>
                {{ data_title }}
              </a>
              {% if settings.enable_lang_switcher %}
              <span class="hide" id="footer4_{{link.handle}}">{{ data_json | raw }}</span>
              {% endif %}
            </li>
            {% endfor %}
            {% endif %}
          </ul>
      </div>
      {% elsif block.type == 'Info' %}
       <div class="col">
          <h4 class="sub-title {% if settings.enable_lang_switcher %}lang_trans{% endif %}" {% if settings.enable_lang_switcher %}data-trans="#footer4_{{blockId}}info_title"{% endif %}>
            {{ block.settings.title }}
          </h4>
          {% if settings.enable_lang_switcher %}
          <span class="hide" id="footer4_{{blockId}}info_title">{{ block.settings.trans_title | raw }}</span>
          {% endif %}
            <ul class="contact-list">
              <li style="color: {{ settings.footer_link_color }}">
                <i class="fa fa-map-marker"></i>
                <span {% if settings.enable_lang_switcher %}class="lang_trans" data-trans="#footer4_{{blockId}}_address"{% endif %}>
                  {{ block.settings.address }}
                </span>
                {% if settings.enable_lang_switcher %}
                <span class="hide" id="footer4_{{blockId}}_address">{{ block.settings.trans_address | raw }}</span>
                {% endif %}
              </li>
              <li style="color: {{ settings.footer_link_color }}">
                <i class="fa fa-phone"></i>
                <span {% if settings.enable_lang_switcher %}class="lang_trans" data-trans="#footer4_{{blockId}}_contact_info"{% endif %}>
                  {{ block.settings.contact_info }}
                </span>
                {% if settings.enable_lang_switcher %}
                <span class="hide" id="footer4_{{blockId}}_contact_info">{{ block.settings.trans_contact_info | raw }}</span>
                {% endif %}
              </li>
              <li style="color: {{ settings.footer_link_color }}">
                <i class="fa fa-envelope-o"></i>
                <span {% if settings.enable_lang_switcher %}class="lang_trans" data-trans="#footer4_{{blockId}}_email"{% endif %}>
                  {{ block.settings.email }}
                </span>
                {% if settings.enable_lang_switcher %}
                <span class="hide" id="footer4_{{blockId}}_email">{{ block.settings.trans_email | raw }}</span>
                {% endif %}
              </li>
              <li style="color: {{ settings.footer_link_color }}">
                <i class="fa fa-fax"></i>
                <span {% if settings.enable_lang_switcher %}class="lang_trans" data-trans="#footer4_{{blockId}}_fax"{% endif %}>
                  {{ block.settings.fax }}
                </span>
                {% if settings.enable_lang_switcher %}
                <span class="hide" id="footer4_{{blockId}}_fax">{{ block.settings.trans_fax | raw }}</span>
                {% endif %}
              </li>
         </ul>
         </div>
         {% endif %}
      {% endfor %}
    </div>
    <hr/>
    <div class="row">
      <div class="col-sm-12">
        <ul class="bottom-links">
          {% if section.settings.footer_btm_linklist != blank %} 
          {% assign footer_linklist = section.settings.footer_btm_linklist -%}
          {% for link in linklists[footer_linklist].links %}
          <li>{% assign data_title = link.title | split: '|' | first %}
                    {% assign data_json = link.title | split: '|' | last %}
                    <a href="{{ link.url }}" style="color: {{ settings.footer_link_color }}" {% if settings.enable_lang_switcher %}class="lang_trans" data-trans="#footer1_{{link.handle}}"{% endif %}>
                      {{ data_title }}
                    </a>
                    {% if settings.enable_lang_switcher %}
                    <span class="hide" id="footer1_{{link.handle}}">{{ data_json | raw }}</span>
                    {% endif %}</li>
          {% endfor %}
          {% endif %}
        </ul>
      </div>
    </div>
  </div>
</footer>


