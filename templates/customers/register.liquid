<!--section start-->
<section class="authentication-page">
  <div class="container">
    <div class="row inner-page-header section-b-space">
       <div class="col-sm-6">
      </div>
            <div class="col-sm-6">
           {% include 'breadcrumb' %}
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <h2 class="title title-borderless title-layout-2">{{ 'customer.register.title' | t }}</h2>
        <div class="theme-card">
          {% form 'create_customer' , class: 'theme-form' %}

          {%- if form.errors -%}
          <div class="form-message form-message--error">
            {{ form.errors | default_errors }}
          </div>
          {%- endif -%}

          <div class="form-row">
            <div class="col-md-6">
              <label for="FirstName">PRENOM(S)<span class="required"> *</span></label>
              <input type="text" required="required" class="form-control" name="customer[first_name]" placeholder="Prénom(s)" id="FirstName" {% if form.first_name %}value="{{ form.first_name }}"{% endif %} autofocus>
            </div>
            <div class="col-md-6">
              <label for="LastName">NOM<span class="required"> *</span></label>
              <input type="text" required="required" class="form-control" name="customer[last_name]" id="LastName" placeholder="Nom" {% if form.last_name %}value="{{ form.last_name }}"{% endif %}>
            </div>
            <div class="col-md-6">
              <label for="phone">TELEPHONE<span class="required"> *</span></label>
              <input type="text" class="form-control" required="required" name="customer[phone]" id="phone" placeholder="Téléphone" {% if form.last_name %}value="{{ form.phone }}"{% endif %}>
            </div>
            <div class="col-md-4">
             <label for="email">EMAIL<span class="required"> *</span></label>
              <input type="email" name="customer[email]" required="required" style="margin-left:167px;height:4px;width:274px;" id="Email" placeholder="Email" class="form-control {% if form.errors contains 'email' %} input--error{% endif %}" {% if form.email %} value="{{ form.email }}"{% endif %} autocorrect="off" autocapitalize="off">
            </div>
            <div class="col-md-6">
              <label for="password">MOT DE PASSE<span class="required"> *</span></label>
              <input type="password" style="margin-left:167px;height:40px;width:274px;" required="required"  value="" name="customer[password]" id="customer_password" placeholder="Mot de passe" class="form-control password">
            </div>
            <div class="col-md-6">
              <label for="password_confirmation">CONFIRMER MOT DE PASSE<span class="required"> *</span></label>
              <input type="password" style="margin-left:167px;height:40px;width:274px;" value="" required="required" name="customer[password_confirmation]" placeholder="Confirmez votre mot de passe" id="confirm-password" class=" form-control password text" size="30" />
            </div>
              
            <br>
            <p>NB:Les champs suivis d'une astérisque(<span class="required">*</span>) sont obligatoires</p>
            <br>
            <button style="margin-top:30px;" class="btn btn-secondary button">Créer</button>
          </div>
          {% endform %}
          {%- if form.posted_successfully? -%}
<p>Thank you for registering an account.</p>
{%- endif -%}
        </div>
      </div>
    </div>
  </div>
  
</section>
<!--Section ends-->


          
<script>
  $(function(){
    $('#create_customer').submit(function(e) {     
      if ( $('input[name="customer[password]"]').val() != $('input[name="customer[password_confirmation]"]').val()) {
        e.preventDefault();
        alert('Passwords do not match.');
      }
    });
  });
</script>     

