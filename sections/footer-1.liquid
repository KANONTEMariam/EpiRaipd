{% schema %}
{
   "name":"Footer",
   "max_blocks":8,
   "settings":[
      {
         "type":"checkbox",
         "id":"show_social",
         "label":"Show Social Icon",
         "default":true
      },
      {
         "type":"link_list",
         "id":"footer_btm_linklist",
         "label":"Select Bottom footer menu",
         "default":"footer"
      }
   
   ],
   "blocks":[
      {
         "type":"Custom-html",
         "name":"Custom Html",
         "settings":[
            {
               "type":"image_picker",
               "id":"footer_logo",
               "label":"footer Logo image"
            },
            {
               "type":"text",
               "id":"footer_logo_max_width",
               "label":"Custom logo width (in pixels)",
               "default":"280"
            },
            {
               "type":"textarea",
               "id":"text",
               "label":"Text",
			   "default": "It is a long established fact that a reader will be distracted by the readable content."
            },
            {
               "type":"checkbox",
               "id":"show_downloads",
               "label":"Show App Downloads",
               "default":true
            },
            {
               "type":"image_picker",
               "id":"payment_1",
               "label":"google Play Image"
            },
            {
               "type":"url",
               "id":"payment_1_link",
               "label":"google Play Link"
            },
            {
               "type":"image_picker",
               "id":"payment_2",
               "label":"App store Image"
            },
            {
               "type":"url",
               "id":"payment_2_link",
               "label":"App store Link"
            }
         ]
      },
        {
         "type":"Menu",
         "name":"footer Menu",
         "settings":[
            {
               "type":"text",
               "id":"title",
               "label":"Menu Title",
               "default": "Links"
            },
            {
             "type": "textarea",
             "id": "trans_title",
             "label": "Translate Text Title"
            },
            {
               "type":"link_list",
               "id":"footer_linklist",
               "label":"Select footer menu",
               "default":"footer"
            }
            ]
         },
       {
          "type":"Info",
         "name":"Store Info",
         "settings":[
            {
               "type":"text",
               "id":"title",
               "label":"Store Info title",
               "default": "Store Info"
            },
            {
             "type": "textarea",
             "id": "trans_title",
             "label": "Translate Store Info Title"
            },
            {
               "type":"text",
               "id":"address",
               "label":"Address",
               "default":"Fiot Fashion Demo Store Demo Store USA"
            },
            {
             "type": "textarea",
             "id": "trans_address",
             "label": "Translate Address Title"
            },
            {
               "type":"text",
               "id":"email",
               "label":"Email Addres",
               "default":"Email Us: Support@Fiot.com"
            },
            {
             "type": "textarea",
             "id": "trans_email",
             "label": "Translate Email Title"
            },
            {
               "type":"text",
               "id":"fax",
               "label":"Fax Number",
               "default":"Fax: 123456"
            },
            {
             "type": "textarea",
             "id": "trans_fax",
             "label": "Translate fax Title"
            }
         ]
      }
   ]
}
{% endschema %}

