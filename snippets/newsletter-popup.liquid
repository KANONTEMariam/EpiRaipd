<!--modal popup start-->
<div class="modal fade bd-example-modal-lg theme-modal pr-0" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <div class="news-img container-fluid ">
          <div class="row">
            <div class="col-sm-4">
            </div>
            <div class="col-sm-8">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
              <div class="modal-text">
                <div class=" w-100">
                   {% if settings.newsletter_heading != blank %}
                  <h1 {% if settings.enable_lang_switcher %}class="lang_trans" data-trans="#newsltr_popup_newsletter_heading"{% endif %}>
                    {{ settings.newsletter_heading }}
                  </h1>
                  {% if settings.enable_lang_switcher %}
                  <span class="hide" id="newsltr_popup_newsletter_heading">{{ settings.trans_newsletter_heading | raw }}</span>
                  {% endif %}
                  {% endif %}
                   {% if settings.newsletter_text != blank %}                  
                  <h4 {% if settings.enable_lang_switcher %}class="lang_trans" data-trans="#newsltr_popup_newsletter_text"{% endif %}>
                    {{ settings.newsletter_text }}
                  </h4>
                  {% if settings.enable_lang_switcher %}
                  <span class="hide" id="newsltr_popup_newsletter_text">{{ settings.trans_newsletter_text | raw }}</span>
                  {% endif %}
                  {% endif %}
                  <form action="{{ settings.newsletter_form_url }}" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="modal-form" target="_blank" novalidate>
                    <div id="mc_embed_signup_scroll">
                      <div class="form-group">
                        <input type="email" placeholder="Email" class="required email form-control" value="" name="EMAIL" aria-describedby="emailHelp"   required>
                        <br>
                        <input type="nomber" placeholder="Téléphone" class="required email form-control" value="" name="PHONE" aria-describedby="emailHelp"   required>
                      </div>
                      <div id="mce-responses" class="clear">
                        <div class="response" id="mce-error-response" style="display:none"></div>
                        <div class="response" id="mce-success-response" style="display:none"></div>
                      </div>
                      <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
                      <div style="position: absolute; left: -5000px;" aria-hidden="true">
                        <input type="text" name="b_17af379706d80b694776f991f_9ebb72e4d2" tabindex="-1" value="">
                      </div>
                      <button type="submit" class="btn btn-theme  btn-secondary btn-block btn-modal" name="subscribe" id="mc-embedded-subscribe">Je suis partant(e)</button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!--modal popup end-->