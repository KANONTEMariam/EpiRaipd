
<div class="container sticky" style="margin-top:-39px;margin-bottom:-20px;">
  <header style="margin-top:9px;">
    <div class="mid-header mid-header-layout-2" style="margin-top:9px;" >
      <div class="container" style="margin-top:9px;">
        <div class="row" style="margin-top:9px;">
          <div class="col-2 logo" itemscope itemtype="http://schema.org/Organization" 
               >
            <meta itemprop="name" content="{{ shop.name }}" />
            {% if section.settings.logo %}
            <a href="/" itemprop="url">
              <img src="{{ section.settings.logo | img_url:'master' }}" alt="{{ shop.name }}" style="max-width:{{ section.settings.logo_max_width }}px" itemprop="Image"/>
            </a>
            {% else %}
            <h1 itemprop="logo"><a href="/" itemprop="url">{{ shop.name }}</a></h1>
            {% endif %}
            
          </div>
          <div class="col-xl-2 col-md-2" >
            <div style="">
                      <div class="popup" id="popup-1">
               <div class="content">
                <div class="close-btn" onclick="togglePopup()" style="cursor: pointer;">
                 ×</div>

            <h1 style="color:#ff822e">Mon EpiCompte</h1> 
              <input type="text" placeholder="Email" style="height:40px;width:250px;border-radius:3px; border:1px solid #ced4da;color:#b4b4b4;">
              <input type="password"  placeholder="Mot de Passe" style="height:40px;width:250px;margin-bottom:15px;border-radius:3px; border:1px solid #ced4da;color:#b4b4b4;">
                 <!--button class="validate" style="background-color:black;border:none;height:40px;cursor: pointer;width:100px;border-radius:4px;"><p style="color:white;padding-top:-7px;" >Connexion</p></button-->
                 <button type="submit" class="btn btn-secondary " {% if settings.enable_lang_switcher %}data-trans-key="customer.recover_password.submit"{%endif%}>Connexion</button>
                <p>Avez vous un compte? <a href="/account/register" style="color:#ff822e">Inscription</a></p>


               </div>
              </div>

                       <div class="map" >

                          <a href="#" onclick="togglePopup()" style="color:black;text-align:center;">
                            <img src="{{ section.settings.map_img | img_url: '15x' }}"  alt="Cart-icon" />
                            OÙ LIVRER?
                          </a>

                      </div>
            </div>
          </div>
          
          <div class="col-xl-3 col-md-3 col-sm-12 pl-2" >
            
            <div>
            {% if section.settings.search_enable %}
            <form class="form-header"  action="/search" method="get" role="search">
               <div class="input-group" >
        		
                 
        <div class="select-box mega-menu ">

            

            <div class="selected ">
              
            </div>
        </div>
                      
    
        <input type="search" class="form-control " style="height:40px;font-size:15px;color:#2B2015;width:20em;border-radius:4px;border-color:#81c41d;weidth:1000px;" name="q" placeholder="Recherchez produits, recettes, prestations......" aria-label="{{ 'general.search.placeholder' | t }}">
        
      </div>
              
            </form>
           {% endif %}
            
            </div>
          </div>
          <div class="col-xl-1 col-md-1 col-4">
            <div class="text-right" >
          <ul class="header-dropdown">
            <li class="onhover-dropdown">
              <span class="fleche">LANGUE</span> 
            
              <ul class="onhover-show-div" id="translate" style="text-align: left;">
                {% include 'language-picker' %}
              </ul>
            </li>
          </ul>
        </div>
            </div>
          <div class="col-xl-2 col-md-2 col-4">
          <div class="text-right" >
          <ul class="header-dropdown">
            
            
            {% if settings.show_catelogue != true %}
            <li class="onhover-dropdown">
              <i class="fa fa-user" aria-hidden="true" style="color:#81C41D;padding-right:0px;"></i>
              <span class="fleches" {% if settings.enable_lang_switcher %}data-trans-key="customer.account.title"{%endif%}>MON EPICOMPTE</span>
              <ul class="onhover-show-div" style="text-align: left;">
                <li>
                  {% if customer %}
                  <a class="langecolor" href="/account/logout" {% if settings.enable_lang_switcher %}data-trans-key="layout.customer.log_out"{%endif%}>
                    Je me déconnecte
                  </a>
                  {% else %}
                  <a class="langecolor" href="/account/login" {% if settings.enable_lang_switcher %}data-trans-key="layout.customer.log_in"{%endif%}>
                    Je me connecte
                  </a>
                  {% endif %}
                </li>
                <li>
                  {% if customer %}
                  <a class="langecolor" href="/account" {% if settings.enable_lang_switcher %}data-trans-key="layout.customer.account"{%endif%}>
                    EpiCompte
                  </a>
                  {% else %}
                  <a class="langecolor" href="/account/register" {% if settings.enable_lang_switcher %}data-trans-key="layout.customer.create_account"{%endif%}>
                   	Je m'inscris
                  </a>
                  {% endif %}
                </li>
              </ul>
            </li>
            {% endif %}
            
          </ul>
        </div>
          </div>
          <div class="col-xl-1 col-md-2 col-4">
            
            
            {% if settings.show_catelogue != true %}
            <div class="media pull-right onhover-dropdown">
              <a href="/cart">
                <img src="{{ section.settings.cart_img | img_url: '42x' }}" class="cart-icon" alt="Cart-icon" />
              </a>
              <div class="media-body align-self-center cart-section cart-section-layout-2">
                <h3 class="mt-0 f-bold">{{ section.settings.cart_text }}</h3>
                <h5>
                  (<span class="cart_qty_cls">
                  {{ cart.item_count }}
                  </span>)
                  <span class="items_carts"></span>
                </h5>
                {% if section.settings.cart_redirect == 'ajax_cart' %}
                <ul class="cart-dropdown onhover-show-div" id="cart_container_id" style="color:grey;"></ul>
                {% endif %}
              </div>
            </div>
            {% endif %}
          
          </div>
        </div>
      </div>
    </div>
  </header>
</div>



{% schema %}
{
   "name":"Header",
   "settings":[
      {
         "type":"header",
         "content":"Main header"
      },
      {
         "type":"checkbox",
         "id":"search_enable",
         "label":"Search Enabled?",
         "default":true
      },
      {
         "type":"image_picker",
         "id":"logo",
         "label":"Logo image"
      },
      {
         "type":"text",
         "id":"logo_max_width",
         "label":"Custom logo width (in pixels)",
         "default":"170"
      },
      {
         "type":"header",
         "content":"Shopping Cart"
      },
      {
         "type":"text",
         "id":"cart_text",
         "label":"Cart Title",
         "default":"Shopping Cart"
      },

       {  
         "type":"textarea",
         "id":"trans_cart_text",
         "label":"Translate shopping cart"
      },
      {
         "type":"image_picker",
         "id":"cart_img",
         "label":"Cart image"
      },
	  {
         "type":"image_picker",
         "id":"map_img",
         "label":"Map image"
      },
      {
         "type":"select",
         "id":"cart_redirect",
         "label":"Cart Option",
         "options":[
            {
               "label":"Ajax Cart",
               "value":"ajax_cart"
            },
            {
               "label":"Redirect Cart Page",
               "value":"redirect_to_cart"
            }
         ],
         "default":"ajax_cart"
      }
   ]
}
{% endschema %}

{% stylesheet %}
{% endstylesheet %}

{% javascript %}
{% endjavascript %}